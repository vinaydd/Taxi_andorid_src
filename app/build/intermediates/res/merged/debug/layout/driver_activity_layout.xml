<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="10dp"
            android:text="Set Mode - " />

        <ToggleButton
            android:id="@+id/modeToggleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="Online"
            android:textOff="Offline"
            android:text="ToggleButton" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:background="#3E8ED8"
        android:textColor="#fff"
        android:padding="10dp"
        android:text="Requested Rides" />
    
    <Spinner
        android:id="@+id/driverRequestedRidesListFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        />

    <ListView
        android:id="@+id/driverRequestedRides"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>
